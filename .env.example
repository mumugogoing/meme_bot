# Meme Coin Trading Bot Configuration
# Copy this file to .env and fill in your actual values

# ========================================
# GENERAL SETTINGS
# ========================================
DRY_RUN=true
AUTO_EXECUTE=false

# ========================================
# BLOCKCHAIN RPC ENDPOINTS
# ========================================
# Solana
SOLANA_RPC_URL=https://api.mainnet-beta.solana.com
SOLANA_WS_URL=wss://api.mainnet-beta.solana.com

# Base (EVM)
BASE_RPC_URL=https://mainnet.base.org
BASE_WS_URL=wss://mainnet.base.org

# Scan intervals (seconds)
SCAN_INTERVAL_SOLANA_SEC=2
SCAN_INTERVAL_BASE_SEC=2

# ========================================
# STRATEGY THRESHOLDS
# ========================================
WIN_PROBABILITY_THRESHOLD=0.80
MIN_VOLUME_DEX=10000.0
MIN_LIQUIDITY=5000.0
MAX_HONEYPOT_SCORE=0.2
MAX_SLIPPAGE=0.05

# ========================================
# RISK MANAGEMENT
# ========================================
SINGLE_POSITION_PCT=0.01
TOTAL_EXPOSURE_PCT=0.05
DAILY_LOSS_LIMIT=500.0
ACCOUNT_BALANCE=10000.0

# ========================================
# EXECUTION SETTINGS
# ========================================
MAX_SIMULATE_RETRIES=3
SIMULATE_TIMEOUT_SEC=30
CONFIRMATIONS_WAIT=2
DEFAULT_TIME_WINDOW_MIN=15

# ========================================
# API KEYS
# ========================================
# CoinGecko
COINGECKO_API_KEY=

# OKX Exchange
OKX_API_KEY=
OKX_API_SECRET=
OKX_API_PASSPHRASE=

# Twitter/X
TWITTER_API_KEY=

# ========================================
# WALLET CONFIGURATION
# ========================================
# Use OKX Wallet SDK (recommended) or private key
USE_OKX_WALLET=true

# WARNING: Never commit actual private keys to git!
# Use environment variables or secrets management (KMS, Vault)
PRIVATE_KEY=

# ========================================
# DATABASE
# ========================================
DATABASE_URL=sqlite://./meme_bot.db

# ========================================
# TELEMETRY & MONITORING
# ========================================
PROMETHEUS_PORT=9090
LOG_LEVEL=info

# ========================================
# BLACKLIST/WHITELIST
# ========================================
# Comma-separated list of token addresses
BLACKLISTED_TOKENS=
BLACKLISTED_CREATORS=
WHITELISTED_TOKENS=

# ========================================
# LEGACY MEME BOT SETTINGS (Optional)
# ========================================
# Discord Bot Token (if using Discord meme bot)
DISCORD_TOKEN=your_discord_bot_token_here

# Telegram Bot Token (if using Telegram meme bot)
TELEGRAM_TOKEN=your_telegram_bot_token_here

# Bot Settings
BOT_PREFIX=!
ADMIN_IDS=123456789,987654321

# Meme API (optional)
IMGFLIP_USERNAME=your_imgflip_username
IMGFLIP_PASSWORD=your_imgflip_password
